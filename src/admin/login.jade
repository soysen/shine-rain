doctype
html
  head(lang='zh-cn')
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui")
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    title My App
    // Path to Framework7 Library CSS
    link(rel="stylesheet", href="css/#{stylesheetFilename}.css")
    link(rel="stylesheet", href="css/#{stylesheetColorsFilename}.css")
    // Path to your custom app styles
    link(rel="stylesheet", href="css/app.css")
  body
    .statusbar-overlay
    .views
      .view.view-main
        .pages.navbar-through
          .page(data-page="login")
            .page-content.login-screen-content.modal-in
              .content-block
                .login-screen-title
                  img(src="img/logo.png")
                form(action="index.html")
                  .list-block
                    .item-content
                      .item-inner
                        .item-title.label
                          i.user.icon
                        .item-input
                          input(type="text", name="email", placeholder="请输入账号")
                    .item-content
                      .item-inner 
                        .item-title.label 
                          i.lock.icon
                        .item-input
                          input(type="password", name="password", placeholder="请输入密码")
                  .list-block
                      button.button.button-big.color-red.button-fill 登录
 
    // Path to Framework7 Library JS
    script(type="text/javascript", src="js/#{scriptFilename}.js")
    // Path to your app js
    script(type="text/javascript", src="js/app.js")
 